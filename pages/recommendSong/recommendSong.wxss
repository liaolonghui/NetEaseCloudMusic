.recommendSongContainer .header {
  position: relative;
  width: 100%;
  height: 300rpx;
}
.recommendSongContainer .header image {
  width: 100%;
  height: 100%;
}
.recommendSongContainer .date {
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -40rpx;
  margin-left: -140rpx;
  width: 300rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: white;
}

/* list */
.listContainer {
  position: relative;
  top: -20rpx;
  padding: 0 20rpx;
  border-radius: 30rpx;
  background-color: #fff;
}
.listContainer .listHeader {
  height: 80rpx;
  line-height: 80rpx;
}
.listContainer .listHeader .changeMore {
  float: right;
}

.listScroll {
  height: calc(100vh - 380rpx);
}
.scrollItem {
  display: flex;
  margin-bottom: 20rpx;
}
.scrollItem image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}
.scrollItem .musciInfo {
  flex: 1;
  display: flex;
  flex-direction: column;
  white-space: nowrap;
  margin-left: 20rpx;
}
.scrollItem .musciInfo>text {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 26rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.scrollItem>text {
  width: 60rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
}