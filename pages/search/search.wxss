/* pages/search/search.wxss */
.searchContainer {
  padding: 0 10rpx;
}
.searchContainer .header {
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  padding: 10rpx 0;
}
.searchContainer .searchInput {
  flex: 1;
  border-radius: 30rpx;
  background-color: rgba(237, 237, 237, .3);
}
.searchInput input {
  height: 100%;
  padding-left: 60rpx;
}
.searchInput .searchIcon {
  position: absolute;
  top: 10rpx;
  left: 25rpx;
}
.placeholder {
  /* color: #d43c33; */
  font-size: 28rpx;
}
.searchContainer .cancel {
  width: 100rpx;
  text-align: center;
}

/* 热搜榜 */
.hotContainer .title {
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #eee;
}
.hotContainer .hotList {
  display: flex;
  flex-wrap: wrap;
}
.hotList .hotItem {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
}
.hotItem .order {
  margin: 0 10rpx;
}
.hotItem image {
  width: 40rpx;
  height: 25rpx;
  margin-left: 10rpx;
}

/* 搜索内容展示 */
.searchContent {
  color: #d43c33;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  border-bottom: 1rpx solid #d43c33;
}
.searchList .searchItem {
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
}
.searchItem .content {
  flex: 1;
  margin-left: 20rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 28rpx;
}

/* 搜索历史 */
.history {
  position: relative;
  display: flex;
  flex-wrap: wrap;
}
.history .title {
  font-size: 28rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.history .historyItem {
  box-sizing: border-box;
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 20rpx;
  margin-left: 20rpx;
  margin-bottom: 10rpx;
  border-radius: 30rpx;
  background-color: #ededed;
  font-size: 26rpx;
}
.history text.delete {
  position: absolute;
  bottom: -40rpx;
  right: 30rpx;
  font-size: 36rpx;
}