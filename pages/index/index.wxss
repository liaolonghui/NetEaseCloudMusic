.index-page {
  height: 100%;
  background-color: #eee;
}
.banners {
  height: 300rpx;
}
.banners image {
  width: 100%;
  height: 100%;
}
/* 图标导航 */
.navContainer {
  display: flex;
}
.navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}
.navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: rgb(240, 19, 19);
  font-size: 50rpx;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  margin: 20rpx 0;
}
.navItem text {
  font-size: 26rpx;
}

/* 推荐 */
.recommendContainer {
  padding: 20rpx;
}
.recommendContainer .header {
  padding-bottom: 25rpx;
}
.recommendContainer .header .title {
  font-size: 32rpx;
  line-height: 80rpx;
  color: #666;
}
.recommendContainer .header .more {
  float: right;
  border: 1px solid #ccc;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.recommendScroll {
  display: flex;
}
.recommendScroll .scrollItem {
  width: 200rpx;
  height: 300rpx;
  margin-right: 20rpx;
}
.scrollItem image {
  width: 200rpx;
  height: 200rpx;
}
.scrollItem text {
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
