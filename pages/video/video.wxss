.viewContainer .header {
  display: flex;
  padding: 10rpx;
}
.viewContainer .header image {
  width: 60rpx;
  height: 60rpx;
}
.viewContainer .search {
  flex: 1;
  margin: 0 20rpx;
  border: 1px solid #ccc;
  font-size: 26rpx;
  line-height: 60rpx;
  text-align: center;
  color: #d43c33;
}
/* nav */
.navScroll {
  display: flex;
  white-space: nowrap;
  height: 60rpx;
}
.navScroll .scrollItem {
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
}
.navScroll .navContent {
  box-sizing: border-box;
}
.navScroll .active {
  color: #d43c33;
  border-bottom: 1px solid #d43c33;
}

/* video */
.videoScroll {
  margin-top: 20rpx;
  height: calc(100vh - 164rpx);
}
.videoItem {
  padding: 0 3%;
  margin-top: 10rpx;
}
.videoItem .common {
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}


.videoItem .content {
  font-size: 26rpx;
  height:80rpx;
  line-height: 80rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
/* footer */
.footer {
  border-top: 1rpx solid #eee;
  padding: 20rpx 0;
}
.footer .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.footer  .nickName {
  font-size: 26rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}

.footer .comments_praised {
  float: right;
}

.comments_praised .btn {
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
}

.comments_praised .btn:after {
  border: none;
}

.comments_praised .item {
  margin-left: 50rpx;
  position: relative;
}

.comments_praised .item .count {
  position: absolute;
  top: -20rpx;
  font-size: 20rpx;
}
